  <div class="container">
    <h1>Empleado</h1>
   <a class="btn btn-success btn-block my-4" href="/empleado/crearEmpleado">Crear un nuevo empleado</a>

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre Empleado</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Correo Corporativo</th>
                    <th scope="col">Residencia</th>
            
                    

                </tr>
            </thead>
            <tbody>
      <% if (arrayEmpleado.length> 0) { %>
          <!--Haremos el foreach para recorrer el array-->
          <% arrayEmpleado.forEach(empleado => { %>
              <tr>
                  <th scope="row"><%= empleado.id %></th>
                  <td><%= empleado.Nombre_empleado %></td>
                  <td><%= empleado.Telefono%></td>
                  <td><%= empleado.CorreoCorporativo%></td>
                  <td><%= empleado.Residencia%></td>
                  
                  
                  <td>
                    <a class="btn btn-secondary btn-sm" href="/empleado/<%= empleado.id %>">Editar/Eliminar</a>
                    </td>
                  <td>
                
                    </td>
              </tr>
             
          <% }) %>
      <% } %>
      
</tbody>
        </table>
        <div>
            <a class="btn btn-secondary btn-sm btn-block" href="/">Volver</a>
        </div>
    </div>


